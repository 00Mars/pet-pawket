<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <meta name="shop-origin" content="https://petpawket.com"/>
  <title>Product • Pet Pawket</title>

  <!-- Vendor -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>

  <!-- Base utilities -->
  <link rel="stylesheet" href="/css/core.css"/>

  <!-- PDP-only styles -->
  <link rel="stylesheet" href="/css/product.css"/>

  <link rel="icon" href="/favicon.ico"/>
</head>
<body class="pdp-page">
  <a href="#pdp-root" class="visually-hidden-focusable">Skip to product content</a>

  <div id="navbar-container"></div>

  <main id="main-content" role="main" class="pdp-surface">
    <section class="pdp-section" aria-label="Product detail">
      <div class="container pdp-container">
        <div class="pdp-stage">
          <!-- Layered backplates for depth -->
          <div class="pdp-plate pdp-plate--1" aria-hidden="true"></div>
          <div class="pdp-plate pdp-plate--2" aria-hidden="true"></div>
          <div class="pdp-plate pdp-plate--3" aria-hidden="true"></div>

          <header class="pdp-head" role="banner">
            <div class="pdp-head-card">
              <h1 id="pdp-title" class="pdp-title mb-2">Loading…</h1>
              <ul class="pdp-usps list-unstyled d-flex flex-wrap gap-2 m-0">
                <li class="pdp-usp"><i class="bi bi-truck"></i> Fast Shipping</li>
                <li class="pdp-usp"><i class="bi bi-arrow-repeat"></i> 30-Day Returns</li>
                <li class="pdp-usp"><i class="bi bi-shield-check"></i> Secure Checkout</li>
              </ul>
            </div>
          </header>

          <div id="pdp-status" class="pdp-status" role="status" aria-live="polite"></div>

          <div id="pdp-root" class="pdp-root">
            <!-- Initial skeleton -->
            <div class="pdp-grid">
              <div class="pdp-card">
                <div class="skeleton-block"></div>
                <div class="pdp-thumbs mt-2">
                  <div class="skeleton-chip"></div><div class="skeleton-chip"></div><div class="skeleton-chip"></div>
                </div>
              </div>

              <div class="pdp-col-right">
                <div class="pdp-card pdp-desc-top">
                  <h2 class="pdp-section-title">Details</h2>
                  <article id="pdp-desc-html">
                    <div class="skeleton-chip" style="height: 120px"></div>
                  </article>
                </div>
                <div class="pdp-card pdp-buy">
                  <div class="skeleton-chip" style="height: 44px"></div>
                  <div class="skeleton-chip mt-2" style="height: 44px"></div>
                  <div class="skeleton-chip mt-2" style="height: 44px"></div>
                </div>
              </div>
            </div>
          </div>

          <nav class="mt-3" aria-label="breadcrumbs">
            <a class="btn btn-link p-0" href="/shop.html" rel="prev">← Back to Shop</a>
          </nav>
        </div>
      </div>
    </section>
  </main>

  <div id="news-container"></div>
  <div id="footer-container"></div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script type="module" src="/navbar.js"></script>
  <script type="module" src="/main.js"></script>
  <script type="module" src="/product.js"></script>

  <noscript>
    <div class="container my-3">
      <div class="alert alert-warning">This page requires JavaScript to load product details.</div>
    </div>
  </noscript>
</body>
</html>
